{
   "compilerOptions": {
      /*"lib": [
         "es5",
         "es6"
      ], */
      "target": "es2021",
      "module": "commonjs",
      "rootDir": "src",
      "moduleResolution": "node",
      "baseUrl": "src",
      "paths": {
         "@/*": ["*"]
      },
      "outDir": "./build",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "skipLibCheck": true,
      "sourceMap": true
   },
   "include": ["src"]
}